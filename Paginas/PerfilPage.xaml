<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="APPDoceria.Paginas.PerfilPage"
             Title="Perfil do Usuário">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#F9DED3"/>
    </ContentPage.Behaviors>

    <VerticalStackLayout>
        <Image HeightRequest="150" Source="paginalogo"/>

        <Label Text="Meu Perfil" FontSize="Title" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" />

        <Image HeightRequest="250" Source="perfil"/>

        <Frame BackgroundColor="#F0F0F0" Padding="5">
            <Label Text="Nome do Usuário" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Frame>

    </VerticalStackLayout>
</ContentPage>